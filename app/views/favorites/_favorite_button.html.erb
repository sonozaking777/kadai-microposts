  <% if current_user.favoriting?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost, micropost.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-xs' %>
  <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost, micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>